{
  "name": "rerejs",
  "version": "0.2.1",
  "description": "Re-implementation of ECMA-262 (JavaScript) RegExp",
  "author": "TSUYUSATO Kitsune <make.just.on@gmail.com>",
  "bugs": "https://github.com/MakeNowJust/rerejs/issues",
  "homepage": "https://github.com/MakeNowJust/rerejs#readme",
  "repository": {
    "type": "git",
    "url": "https://github.com/MakeNowJust/rerejs.git"
  },
  "main": "lib/index.js",
  "module": "lib/index.mjs",
  "types": "lib/index.d.ts",
  "files": [
    "lib"
  ],
  "scripts": {
    "bundle": "rollup -c",
    "ci": "yarn test && nyc report --reporter=text-lcov > coverage.lcov",
    "lint": "eslint '*.js' './**/*.ts'",
    "make": "sucrase-node ./tools/make.ts",
    "prepack": "yarn type-check && yarn bundle",
    "test": "nyc ava",
    "type-check": "tsc -p ."
  },
  "devDependencies": {
    "@istanbuljs/nyc-config-typescript": "1.0.2",
    "@rollup/plugin-commonjs": "22.0.1",
    "@rollup/plugin-node-resolve": "13.3.0",
    "@rollup/plugin-sucrase": "4.0.4",
    "@types/node": "16.11.43",
    "@typescript-eslint/eslint-plugin": "5.30.3",
    "@typescript-eslint/parser": "5.30.3",
    "ava": "4.2.0",
    "eslint": "8.19.0",
    "eslint-config-prettier": "8.5.0",
    "eslint-plugin-import": "2.26.0",
    "eslint-plugin-prettier": "4.2.1",
    "nyc": "15.1.0",
    "prettier": "2.5.1",
    "rollup": "2.75.7",
    "rollup-plugin-dts": "4.2.2",
    "source-map-support": "0.5.21",
    "sucrase": "3.23.0",
    "typescript": "4.7.4",
    "unicode-12.0.0": "0.8.0",
    "unicode-match-property-value-ecmascript": "2.0.0",
    "unicode-property-aliases-ecmascript": "2.0.0",
    "unicode-property-value-aliases-ecmascript": "2.0.0"
  },
  "ava": {
    "extensions": [
      "ts"
    ],
    "require": [
      "sucrase/register/ts"
    ],
    "files": [
      "test/**/*"
    ]
  },
  "nyc": {
    "extends": "@istanbuljs/nyc-config-typescript",
    "all": true,
    "include": [
      "src/**/*.ts",
      "!src/data/*.ts"
    ],
    "reporter": [
      "text",
      "html"
    ]
  },
  "eslintConfig": {
    "root": true,
    "parser": "@typescript-eslint/parser",
    "plugins": [
      "@typescript-eslint",
      "import",
      "prettier"
    ],
    "extends": [
      "eslint:recommended",
      "plugin:import/errors",
      "plugin:import/typescript",
      "plugin:@typescript-eslint/eslint-recommended",
      "plugin:@typescript-eslint/recommended",
      "plugin:prettier/recommended",
      "prettier"
    ],
    "ignorePatterns": [
      "node_modules/",
      "out/",
      "lib/",
      "src/data/"
    ],
    "rules": {
      "import/no-unresolved": [
        "error",
        {
          "ignore": [
            "ava"
          ]
        }
      ],
      "import/order": [
        "error",
        {
          "groups": [
            "builtin",
            "external",
            [
              "index",
              "sibling",
              "parent"
            ]
          ],
          "newlines-between": "always",
          "alphabetize": {
            "order": "asc",
            "caseInsensitive": true
          }
        }
      ],
      "@typescript-eslint/no-unused-vars": [
        "error",
        {
          "argsIgnorePattern": "^_"
        }
      ]
    }
  },
  "prettier": {
    "singleQuote": true,
    "printWidth": 100
  },
  "renovate": {
    "extends": [
      "config:base"
    ],
    "automerge": true
  }
}
